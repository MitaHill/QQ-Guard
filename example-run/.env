# AI Provider: openai or ollama
QQ_GUARD_AI_PROVIDER=openai

# OpenAI API Key (fallback: INFO2AI_API_KEY)
OPENAI_API_KEY=your_openai_api_key_here
INFO2AI_API_KEY=your_fallback_api_key_here

# Prompt paths (mounted in container)
INFO2AI_PROMPT_DIR=/app/config/info2ai/prompt-files
INFO2AI_PROMPT_FILE=/app/config/info2ai/prompt.txt

# OneBot/NapCat runtime mode
QQ_GUARD_BOT_MODE=http_post
QQ_GUARD_HTTP_URL=http://192.168.9.4:3005
QQ_GUARD_WS_URL=ws://192.168.9.4:3006
QQ_GUARD_TOKEN=token

# Ollama thinking output (optional)
QQ_GUARD_OLLAMA_THINKING=false

# HTTP POST server settings
QQ_GUARD_HTTP_POST_HOST=0.0.0.0
QQ_GUARD_HTTP_POST_PORT=8080
QQ_GUARD_HTTP_POST_PATH=/
QQ_GUARD_HTTP_POST_SECRET=

# Web UI backend
QQ_GUARD_WEB_HOST=0.0.0.0
QQ_GUARD_WEB_PORT=5000
QQ_GUARD_WEB_CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
